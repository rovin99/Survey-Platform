# Authentication Service Environment Variables
# Copy this file to .env and fill in the values

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_should_be_at_least_32_characters
JWT_ISSUER=your_application_name
JWT_AUDIENCE=your_application_client
JWT_EXPIRES_MINUTES=15

# Database Connection
CONNECTION_STRING=Server=localhost;Database=authdb;User Id=dbuser;Password=your_strong_password;

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com

# Cookie Settings
COOKIE_DOMAIN=localhost
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=Strict

# API Settings
API_BASE_URL=http://localhost:5171
ENVIRONMENT=Development # Set to Production in production environment

# Rate Limiting
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=100 